{
  "name": "dms-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "AVAIL Data Management System Monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:dms": "npm run build -w @availabs/dms",
    "build:server": "npm run build -w @availabs/dms-server --if-present",
    "start:server": "npm run start -w @availabs/dms-server",
    "dev:server": "npm run dev -w @availabs/dms-server",
    "publish:dms": "npm run publish-it -w @availabs/dms",
    "publish:server": "npm publish -w @availabs/dms-server --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/availabs/dms.git"
  },
  "author": "AVAIL",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/availabs/dms/issues"
  },
  "homepage": "https://github.com/availabs/dms#readme"
}
