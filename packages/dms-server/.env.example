# DMS Server Environment Configuration
# Copy to .env and edit values:  cp .env.example .env

# Server port
PORT=3001

# DMS database config (filename from src/db/configs/, without .config.json)
DMS_DB_ENV=dms-sqlite

# Auth database config
DMS_AUTH_DB_ENV=dms-sqlite

# Toggle Logging on = 1 off = 0
DMS_LOG_REQUESTS=1

# JWT secret (generate a random string for production)
JWT_SECRET=

